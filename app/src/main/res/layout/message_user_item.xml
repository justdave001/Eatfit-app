<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="@dimen/button_message_send_32dp"
        android:layout_height="@dimen/button_message_send_32dp"
        android:layout_centerInParent="true"
        android:contentDescription="@string/user_avatar_content_description"
        android:src="@drawable/ic_avatar_circle_dark" />


    <TextView
        android:id="@+id/user_avatar_tooltip_target"
        android:layout_width="@dimen/activity_horizontal_margin_8dp"
        android:layout_height="@dimen/activity_vertical_margin_24dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/tooltip_left_spacing"
        />

</RelativeLayout>